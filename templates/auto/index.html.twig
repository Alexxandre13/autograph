{% extends 'base.html.twig' %}

{% block title %}AutoGraph
{% endblock %}

{% block body %}
	<p class="container">
		<a href="">Créer un véhicule +</a>
	</p>
	<div class="container">
		<table class="table table-hover">
			<thead>
				<tr class="table-dark">
					<th scope="col">#</th>
					<th scope="col">Nom</th>
					<th scope="col">Immatriculation</th>
					<th scope="col">Statut</th>
					<th scope="col">Editer</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for v in vehicules %}
					<tr>
						<td>{{ v.id }}</td>
						<td>{{ v.name }}</td>
						<td>{{ v.license }}</td>
						<td>{{ v.status.description }}</td>
						<td>
							<a href="">Editer ?</a>
						</td>
						<td>
							<a href="">Supprimer ?</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
